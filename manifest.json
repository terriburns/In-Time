{
  "manifest_version": 2,
  "name": "In Time",
  "description": "Automate a to do list from your email",
  "version": "1.0",
  "icons": { "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png" },

  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "index.html",
    "default_title": "In Time"
  },
  
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
  {
    "matches": [
      "*://*/*"
      ],
    "css": [
      "styles.css"
      ]
  }
  ]
}
